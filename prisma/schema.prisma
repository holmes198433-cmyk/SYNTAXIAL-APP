generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AppConfig {
  id             String   @id @default("default-app-id")
  shopDomain     String   @default("default")
  jsonLdTemplate String   @db.Text
  mappings       String   @db.Text
  updatedAt      DateTime @updatedAt
  createdAt      DateTime @default(now())
}
